{
  "settings": {
    "index": {
      "number_of_replicas": 0,
      "number_of_shards": 24,
      "refresh_interval": "15s",
      "mapping.ignore_malformed": true
    }
  },
  "mappings": {
    "blocc": {
      "dynamic_templates": [
        {
          "data": {
            "match": "data.*",
            "mapping": {
              "norms": false,
              "doc_values": false,
              "fielddata": false,
              "type": "keyword"
            }
          }
        },
        {
          "metric": {
            "match": "metric.*",
            "mapping": {
              "doc_values": false,
              "fielddata": false,
              "index": false,
              "norms": false,
              "type": "double"
            }
          }
        },
        {
          "star_as_keyword": {
            "match_mapping_type": "*",
            "mapping": {
              "type": "keyword",
              "norms": false
            }
          }
        }
      ],
      "properties": {
        "block_height": {
          "type": "long"
        },
        "height": {
          "type": "long"
        },
        "time": {
          "type": "long"
        },
        "block_time": {
          "type": "long"
        },
        "size": {
          "type": "long"
        },
        "in": {
          "type": "object",
          "properties": {
            "height": {
              "type": "long"
            },
            "out": {
              "type": "object",
              "properties": {
                "address": {
                  "type": "keyword",
                  "copy_to": "address"
                },
                "value": {
                  "type": "long"
                },
                "data": {
                  "type": "object"
                },
                "metric": {
                  "type": "object"
                },
                "raw": {
                  "type": "binary"
                }
              }
            },
            "data": {
              "type": "object"
            },
            "raw": {
              "type": "binary"
            }
          }
        },
        "out": {
          "type": "object",
          "properties": {
            "address": {
              "type": "keyword",
              "copy_to": "address"
            },
            "value": {
              "type": "long"
            },
            "data": {
              "type": "object"
            },
            "metric": {
              "type": "object"
            },
            "raw": {
              "type": "binary"
            }
          }
        },
        "raw": {
          "type": "binary"
        },
        "data": {
          "type": "object"
        },
        "metric": {
          "type": "object"
        }
      }
    }
  }
}